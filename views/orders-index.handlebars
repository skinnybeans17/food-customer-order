<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <ul class="list-group">
        {{#each orders}}
            <li class="list-group-item">
                <div class="lead">Food: {{this.food}}</a></div>
                <div class="lead">Drink: {{this.drink}}</a></div>
                <div class="lead">Condiment: {{this.condiment}}</a></div>
                <div><small>{{this.author.username}}</small></div>
            </li>
        {{/each}}
    </ul>
  </div>
</div>