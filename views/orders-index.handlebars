<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <ul class="list-group">
        {{#each orders}}
            <li class="list-group-item">
                <div class="lead"><a href="/orders/{{this._id}}">{{this.food}}</a></div>
                <div class="lead"><a href="/orders/{{this._id}}">{{this.drink}}</a></div>
                <div class="lead"><a href="/orders/{{this._id}}">{{this.condiment}}</a></div>
                <div><small>{{this.author.username}}</small></div>
            </li>
        {{/each}}
    </ul>
  </div>
</div>